{
	"name": "game",
	"private": true,
	"version": "0.1.0",
	"type": "module",
	"engines": {
		"node": ">=22.0.0"
	},
	"scripts": {
		"dev": "vite dev",
		"dev:worker": "cd game-worker && npx wrangler dev",
		"dev:full": "npm run build && concurrently -n worker,pages -c blue,green \"cd game-worker && npx wrangler dev\" \"npx wrangler pages dev .svelte-kit/cloudflare\"",
		"build": "vite build",
		"preview": "wrangler pages dev .svelte-kit/cloudflare",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch"
	},
	"devDependencies": {
		"@cloudflare/workers-types": "^4.20241230.0",
		"@sveltejs/adapter-cloudflare": "^5.0.0",
		"@sveltejs/kit": "^2.43.2",
		"@sveltejs/vite-plugin-svelte": "^6.2.0",
		"concurrently": "^9.2.1",
		"esbuild": "^0.24.0",
		"svelte": "^5.39.5",
		"svelte-check": "^4.3.2",
		"typescript": "^5.9.2",
		"vite": "^7.1.7",
		"wrangler": "^4.65.0"
	},
	"dependencies": {
		"@threlte/core": "^8.0.0",
		"@threlte/extras": "^9.0.0",
		"@types/three": "^0.172.0",
		"three": "^0.172.0"
	}
}
